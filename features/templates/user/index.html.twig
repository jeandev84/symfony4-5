{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}


<div class="container">
    <ul>
        {# Loop index started from 0 #}
        {% if users is defined %}
            {% for user in users %}
                <li>{{ user.name }} - you won {{ random_gifts[loop.index0] }}</li>
            {% endfor %}
        {% endif %}
    </ul>
</div>


{% for message in app.flashes('notice') %}
<div class="flash-notice">
    {{ message }}
</div>
{% endfor %}


{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="flash-{{ label }}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}

{% endblock %}


{% block javascripts %}
  <script></script>
{% endblock %}
